# Environment Variables Example
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# Email Configuration
VITE_EMAIL_SERVICE_URL=https://api.emailservice.com
VITE_EMAIL_TO=hello@utilitycommissionclaims.co.uk
VITE_EMAIL_SERVICE_ID=your_service_id_here
VITE_EMAIL_TEMPLATE_ID=your_template_id_here
VITE_EMAIL_PUBLIC_KEY=your_public_key_here

# Analytics (Optional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=XXXXXXX
VITE_FACEBOOK_PIXEL_ID=XXXXXXXXXXXXXXX

# API Configuration
VITE_API_ENDPOINT=https://api.utilitycommissionclaims.co.uk
VITE_API_KEY=your_api_key_here

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_WIDGET=false
VITE_ENABLE_CALCULATOR=true

# Environment
VITE_ENV=production
VITE_DEBUG_MODE=false

# Site Configuration
VITE_SITE_URL=https://utilitycommissionclaims.co.uk
VITE_SITE_NAME=Utility Commission Claims

# Form Settings
VITE_MAX_UPLOAD_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,webp

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=10
VITE_RATE_LIMIT_WINDOW=60000